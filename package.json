{
	"name": "svelte-app",
	"version": "1.0.0",
	"scripts": {
		"build:watch": "postcss public/tailwind.css -o public/build/index.css",
		"build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/build/index.css",
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"prestart": "yarn build",
		"start": "yarn build:tailwind && sirv public",
		"validate": "svelte-check"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^14.0.0",
		"@rollup/plugin-node-resolve": "^8.4.0",
		"@rollup/plugin-typescript": "^5.0.2",
		"@tsconfig/svelte": "^1.0.3",
		"@types/node": "^14.0.25",
		"autoprefixer": "^9.8.5",
		"cross-env": "7.0.2",
		"cssnano": "^4.1.10",
		"postcss": "^7.0.32",
		"postcss-cli": "^7.1.1",
		"postcss-load-config": "^2.1.0",
		"rollup": "^2.23.0",
		"rollup-plugin-livereload": "^1.3.0",
		"rollup-plugin-svelte": "^5.2.3",
		"rollup-plugin-terser": "^6.1.0",
		"svelte": "^3.24.0",
		"svelte-check": "^0.1.55",
		"svelte-preprocess": "^4.0.8",
		"tailwindcss": "^1.5.2",
		"tslib": "^2.0.0",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"sirv-cli": "^1.0.3"
	}
}
